@model RVASProject.Models.Rental

@{
    ViewBag.Title = "Create Rental";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js" integrity="sha512-AIOTidJAcHBH2G/oZv9viEGXRqDNmfdPVPYOYKGy3fti0xIplnlgMHUGfuNRzC6FkzIo0iIxgFnr9RikFxK+sw=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

@Scripts.Render("~/bundles/modernizr") 
@Scripts.Render("~/Scripts/jquery.datetimepicker.full.min.js")

<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.3.7/jquery.datetimepicker.min.css" />

<style>
    #customersTable {
        border-collapse: collapse;
        width: 100%;
    }

        #customersTable th, #customersTable td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }

        #customersTable th {
            background-color: #f2f2f2;
        }
</style>


<script type="text/javascript">
    $(document).ready(function () {
        $('#datetimepicker').datetimepicker({
            format: 'YYYY-MM-DD HH:mm'
        });
    });
</script>

<h2>Rent Car</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.FirstName)
        </dd>
        <dt class="col-sm-2">
            CID
        </dt>
        @*<dd class="col-sm-10">
                @Html.DisplayFor(model => model.Car.Id)
            </dd>*@
        <dt class="col-sm-2">
            Make
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Make)
        </dd>
        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Model)
        </dd>
        <dt class="col-sm-2">
            Year
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Year)
        </dd>
    </dl>
</div>

@using (Html.BeginForm("Create", "Rent", FormMethod.Post))
{

    @Html.HiddenFor(model => model.CarId, new { Value = Model.Car.Id })
    @*<div class="form-group">
            @Html.LabelFor(model => model.Customer.Id, "Customer ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Customer.Id, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })
            </div>
        </div>*@

    <div class="form-group">
        @Html.LabelFor(model => model.RentTime, "RentTime", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.RentTime, "{0:yyyy-MM-dd HH:mm}", new { @class = "form-control datetimepicker" })
            @Html.ValidationMessageFor(model => model.RentTime, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ReturnTime, "ReturnTime", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.ReturnTime, "{0:yyyy-MM-dd HH:mm}", new { @class = "form-control datetimepicker" })
            @Html.ValidationMessageFor(model => model.ReturnTime, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.HiddenFor(model => model.Id)
    </div>

    @*<div class="form-group">
            @Html.HiddenFor(model => model.Car.Id)
        </div>*@
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Rent" class="btn btn-primary" />
        </div>
    </div>
}
